<view class="container">
  <view class="header">添加用户</view>
  <form bindsubmit="addUser">
    <!--用户名-->
    <view class="inputView">
        <label class="infoLabel">用户名</label>
        <input name="username" type="text" class="inputText" placeholder="请输入用户名"/>
    </view>
    <view class="line"></view>
    <!--手机-->
    <view class="inputView">
        <label class="infoLabel">手机</label>
        <input name="phone" type="text" class="inputText"  placeholder="请输入手机号码"/>
    </view>
    <!--按钮-->
    <view>
        <button class="addBtn" type="primary" form-type='submit'>添加</button>
    </view>
    <view>
        <button class="resetBtn" type="warn" bindtap="reset">重置</button>
    </view>
  </form>
</view>
